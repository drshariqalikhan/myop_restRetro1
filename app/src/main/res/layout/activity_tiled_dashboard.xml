<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spero.shariq.com.myop_restretro1.TiledDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <Button
                android:id="@+id/StageIconBtn"
                android:layout_width="0dip"
                android:textColor="@color/white"
                android:text="PREOPERATIVE CHECK"
                android:layout_height="match_parent"
                android:background="@drawable/tubesign"
                android:layout_weight="1" />

            <Button
                android:id="@+id/StageBtn"
                android:layout_width="0dip"
                android:textColor="@color/white"
                android:text="CLICK HERE\n TO COMPLETE \n STAGE \n BEFORE \n 12 hours 10 min"
                android:background="@color/red"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ReminderBtn"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="THINGS I NEED \n TO DO"
                android:onClick="ThingsToDOClick"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1" />

            <Button
                android:id="@+id/AboutOpBtn"
                android:layout_width="0dip"
                android:text="ABOUT \n MY \n SURGERY"
                android:onClick="AboutOPClick"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <Button
                android:id="@+id/MessageBtn"
                android:layout_width="0dip"
                android:onClick="MessageClick"
                android:text="MESSAGE \n YOUR \n MEDICAL TEAM"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/OpDetailBtn"
                android:layout_width="0dip"
                android:background="@color/colorPrimary"
                android:text="DAYS TO \n SURGERY \n 12"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
